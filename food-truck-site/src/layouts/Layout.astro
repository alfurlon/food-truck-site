---

import { Image } from 'astro:assets';
import foodTruckLogo from '../../public/food-truck-logo-no-bg.png'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-main-bg-color w-screen">
		<div class="flex w-screen lg:justify-around md:justify-between justify-around items-center lg:mt-0 mt-3 lg:ml-0 sm:pl-10 relative">
			<div class="md:h-32 md:w-32 h-20 w-20" id="food-truck-logo">
				<Image src={foodTruckLogo} alt="Food Truck Logo" />
			</div>
			<div class="text-nav-link-color lg:hidden cursor-pointer sm:mr-10" id="burger-menu">
				<span class="material-symbols-outlined text-3xl">
					menu
				</span>
			</div>
			<div id="close-menu" class="hidden cursor-pointer text-nav-link-color w-screen mr-16 mt-6">
				<span class="material-symbols-outlined">
					close
				</span>
			</div>
			<div class="hidden absolute top-0 left-0 mt-12 pl-10 bg-main-bg-color w-screen h-screen z-10" id="nav-links-menu">
				<ul class="text-nav-link-color">
					<li><a href="/">Home</a></li>
					<li><a href="/">Where Are We</a></li>
					<li><a href="/">Menu</a></li>
					<li><a href="/">About Us</a></li>
					<li><a href="/">Contact Us</a></li>
					<li><a href="/">Book Our Truck</a></li>
				</ul>
			</div>
			<div class="lg:flex text-nav-link-color hidden">
				<div class="pr-6">
					<a href="/">Home</a>
				</div>
				<div class="pr-6">
					<a href="/">Where Are We</a>
				</div>
				<div class="pr-6">
					<a href="/">Menu</a>
				</div>
				<div class="pr-6">
					<a href="/">About Us</a>
				</div>
				<div>
					<a href="/">Contact Us</a>
				</div>
			</div> 
			<div class="text-offwhite-text-color bg-cta-color p-3 lg:block hidden">
				<a href="/">Book Our Truck</a>
			</div>
		</div>
		<slot />
	</body>
</html>

<script>
	const burgerButton = document.querySelector('#burger-menu')
	const closeButton = document.querySelector('#close-menu')
	const menu = document.querySelector('#nav-links-menu')
	const logo = document.querySelector('#food-truck-logo')

	//ml-72 mt-5

	burgerButton.addEventListener('click', () => {
		burgerButton.classList.add('hidden')
		closeButton.classList.remove('hidden')
		closeButton.classList.add('flex')
		closeButton.classList.add('justify-end')
		menu.classList.remove('hidden')
		logo.classList.add('hidden')
	})

	closeButton.addEventListener('click', () => {
		burgerButton.classList.remove('hidden')
		closeButton.classList.add('hidden')
		menu.classList.add('hidden')
		logo.classList.remove('hidden')
	})

</script>

