---
import { Image } from "astro:assets";
import tacoPhoto from '../../public/taco-photo.jpg'
---

<section class="pt-10 pb-10">
    <h2 class="text-center font-semibold text-2xl mb-5">Gallery</h2>
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 mb-4">
        <div class="ml-4">
            <Image src={tacoPhoto} alt='gallery photo' class="lg:h-56 xl:h-72" />
        </div>
        <div class="lg:mr-0 mr-4">
            <Image src={tacoPhoto} alt='gallery photo' class="lg:h-56 xl:h-72" />
        </div>
        <div class="lg:mr-4 lg:ml-0 ml-4">
            <Image src={tacoPhoto} alt='gallery photo' class="lg:h-56 xl:h-72" />
        </div>
        <div class="lg:ml-4 lg:mr-0 mr-4">
            <Image src={tacoPhoto} alt='gallery photo' class="lg:h-56 xl:h-72" />
        </div>
        <div class="lg:ml-0 ml-4">
            <Image src={tacoPhoto} alt='gallery photo' class="lg:h-56 xl:h-72" />
        </div>
        <div class="mr-4">
            <Image src={tacoPhoto} alt='gallery photo' class="lg:h-56 xl:h-72" />
        </div>
    </div>
    <div class="text-offwhite-text-color bg-cta-color xl:w-36 lg:w-1/6 md:w-1/4 w-1/3 text-center py-2 mx-auto">
        <a href="/" class="">Book Our Truck</a>
    </div>
</section>